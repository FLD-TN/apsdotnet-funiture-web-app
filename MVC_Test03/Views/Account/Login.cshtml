@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng Nhập</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/signin.css/signin.css">
</head>
<body>
    <div class="container-fluid vh-100 d-flex flex-column flex-lg-row overflow-hidden">
        <!-- Cột bên trái với hình ảnh -->
        <div class="col-lg-6 d-none d-lg-flex justify-content-center align-items-center">
            <img class="sofa-img-login img-fluid" src="~/Content/images/sofaLogin.png" alt="sofa">
        </div>

        <!-- Cột bên phải với form đăng nhập -->
        <div class="col-lg-6 d-flex flex-column justify-content-center p-5 bg-light">
            <h1 class="text-center mb-4">Đăng Nhập</h1>
            <p class="text-center mb-4">Chưa có tài khoản? <a href="@Url.Action("Register","Account")">Đăng ký ngay</a></p>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Tên đăng nhập hoặc địa chỉ email" })
                </div>

                <div class="mb-3 position-relative">
                    @Html.Password("password", null, new { @class = "form-control", placeholder = "Mật khẩu" })
                    <i class="fa fa-eye position-absolute" style="right: 15px; top: 10px; cursor: pointer;"></i>
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Ghi nhớ tôi</label>
                </div>

                <div class="text-center">
                    <span class="forgot-password">
                        <a href="#">Quên mật khẩu?</a>
                    </span>
                </div>

                <button type="submit" class="btn btn-dark w-100 mt-3">Đăng Nhập</button>

                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3">
                        @Html.ValidationSummary(true)
                    </div>
                }
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>