@model MVC_Test03.Models.OrderPro

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #EEE9E9;
    }
    table,tr,td,th{
        background-color:darkgray
    }
</style>
<h2>Chi tiết đơn hàng</h2>

<div>
    <h4>Thông tin đơn hàng</h4>
    <table class="table">
        <tr>
            <th>Ngày đặt hàng</th>
            <td>@Model.DateOrder</td>
        </tr>
        <tr>
            <th>Địa chỉ giao hàng</th>
            <td>@Model.AddressDeliverry</td>
        </tr>
    </table>
</div>

<h4>Chi tiết sản phẩm trong đơn hàng</h4>
<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr class=" " style="vertical-align:middle;">
                <td>
                    <a href="/Products/Details/@detail.Product.ProductID" class="me-3 text-decoration-none">
                        <img src="~/Content/images/@detail.Product.ImagePro" width="80" class="img-thumbnail" />
                    </a>
                    <span style="font-weight:bold;">  @detail.Product.NamePro</span>
                  
                </td> <!-- Hiển thị tên sản phẩm -->
                <td>@detail.Quantity</td>
                <td>@detail.UnitPrice.Value.ToString("#,##0") VND</td>
            </tr>
        }
    </tbody>
</table>
